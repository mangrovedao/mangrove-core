{
  "extends": "solhint:recommended",
  "plugins": [],
  "rules": {
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "var-name-mixedcase": "off",
    "func-name-mixedcase": "off",
    "func-visibility": [
      "warn",
      {
        "ignoreConstructors": true
      }
    ],
    "compiler-version": ["error", "^0.8.10"],
    "max-line-length": ["off"],
    "no-empty-blocks": "off",
    "reason-string": [
      "warn",
      {
        "maxLength": 40
      }
    ],
    "not-rely-on-time": "off",
    "avoid-low-level-calls": "off",
    "no-console": "off"
  }
}

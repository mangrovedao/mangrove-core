{
  "name": "@mangrovedao/mangrove-solidity",
  "version": "1.0.0",
  "author": "Mangrove DAO",
  "license": "(AGPL-3.0-only OR BSD-2-Clause)",
  "scripts": {
    "precommit": "lint-staged",
    "prepack": "yarn build",
    "build-this-package": "hardhat compile && forge build && yarn run copy-distribution-assets",
    "build": "yarn install && yarn workspaces foreach -vpiR --topological-dev --from $npm_package_name run build-this-package",
    "copy-distribution-assets": "node copyDistributionAssets.js",
    "clean-this-package": "rimraf deployments/hardhat deployments/localhost artifacts cache dist exported-abis foundry_out",
    "clean": "yarn workspaces foreach -vpiR --topological-dev --from $npm_package_name run clean-this-package",
    "doc": "solcco -f doc/MgvDoc.html preprocessing/structs.js contracts/MgvLib.sol contracts/MgvRoot.sol contracts/MgvHasOffers.sol contracts/MgvOfferMaking.sol contracts/MgvOfferTaking.sol contracts/MgvOfferTakingWithPermit.sol contracts/MgvGovernable.sol contracts/AbstractMangrove.sol contracts/Mangrove.sol contracts/InvertedMangrove.sol",
    "preproc": "node preprocessing/run.js",
    "test-with-dependencies": "yarn workspaces foreach -vpiR --topological-dev --from $npm_package_name run test",
    "test": "npm-run-all \"test:*\"",
    "test:solidity": "yarn run test:solidity:local; yarn run test:solidity:polygon",
    "test:solidity:local": "bash -c 'source .env; forge test -vvv --no-match-contract \\'^(Guaave|AaveLender|OfferProxy|OasisLike)Test$\\''",
    "test:solidity:polygon": "bash -c 'source .env; forge test -vvv --fork-url $POLYGON_NODE_URL --fork-block-number 26416000 --match-contract \\'^(Guaave|AaveLender|OfferProxy|OasisLike)Test$\\''",
    "notUsed-test:ethereum-mainnet": "yarn run testSuites --network ethereum",
    "test:polygon-mainnet": "yarn run testSuites --network polygon",
    "testSuites": "cross-env NODE_ENV=test node lib/test-suite-runner.js",
    "mt": "NODE_ENV=test node lib/test-suite-runner.js --network polygon offerProxy"
  },
  "lint-staged": {
    "*.{js,css,md,sol,json}": "prettier --write --ignore-unknown"
  },
  "devDependencies": {
    "@espendk/json-file-reporter": "^1.4.1",
    "@ethersproject/experimental": "^5.6.1",
    "@ethersproject/hardware-wallets": "^5.6.0",
    "@nomiclabs/hardhat-ethers": "^2.0.6",
    "@nomiclabs/hardhat-solpp": "^2.0.1",
    "app-module-path": "^2.2.0",
    "chai": "^4.3.4",
    "chai-events": "^0.0.3",
    "config": "^3.3.7",
    "cross-env": "^7.0.3",
    "dotenv-flow": "^3.2.0",
    "ethers": "^5.6.4",
    "fs": "^0.0.1-security",
    "hardhat": "^2.9.9",
    "hardhat-contract-sizer": "^2.5.1",
    "hardhat-deploy": "^0.11.10",
    "hardhat-deploy-ethers": "^0.3.0-beta.10",
    "hardhat-preprocessor": "^0.1.4",
    "hardhat-storage-layout": "^0.1.6",
    "lint-staged": "^13.0.2",
    "mocha": "^10.0.0",
    "mocha-multi-reporters": "^1.5.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.4",
    "solcco": ">=1.0.11",
    "solpp": "^0.11.5",
    "yargs": "^17.1.1"
  }
}
